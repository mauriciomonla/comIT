<div class="row">
  {{#each reservas}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ nombreCancha }}
        </h4>
        <p>{{ fecha }} </p>
        <p>{{comentario}}</p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
    {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <!--h1>Hello {{user.name}}</h1-->
      <p clsss="lead">No hay reservas</p>
      <a href="/canchas/nuevaReserva" class="btn btn-success btn-block">Reservar cancha</a>
    </div>
  </div>
  {{/each}}
</div>